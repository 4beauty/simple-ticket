<%= form_for(ticket) do  |f| %>
  <div class="row">
    <div class="input-field col s6">
      <%= f.text_field :submitted_by %>
      <label for="submitted_by">Name</label>

    </div>

    <div class="input-field col s6">
      <%= f.collection_select :user_id, User.all, :id, :email, {include_blank: true} %>
      <label>Who is this ticket for?</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_area :comment, type:"text", class:"materialize-textarea" %>
      <label for="comment">What is your issue?</label>
    </div>
  </div>

<center>
    <%= f.submit 'Submit Ticket', :class => 'waves-effect waves-light btn' %>
</center>
<% end %>

<script>
  $(document).ready(function() {
    $('select').material_select();
  });
</script>
