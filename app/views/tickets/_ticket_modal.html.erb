<!-- Modal Structure -->
<div id="<%=ticket.id%>" class="modal">
  <div class="modal-content">
    <h4>Ticket Stats</h4>
    <table>
  <tbody>
    <% ticket.attributes.each do |attr|%>
      <tr>
        <td><%=attr[0].titleize%></td>
        <td><%=attr[1]%></td>
      </tr>
    <%end%>
  </tbody>
</table>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>
